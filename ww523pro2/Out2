DATAS SEGMENT 
B DW 2 
t0 DW ? 
E DW 2 
D DW 2 
t1 DW ? 
t2 DW ? 
A DW ? 
3 DW 2 
a DW 2 
t3 DW ? 
2 DW ? 
DATAS ENDS

STACKS SEGMENT
    ;此处输入堆栈段代码
STACKS ENDS

CODES SEGMENT
    ASSUME CS:CODES,DS:DATAS,SS:STACKS
START:
    MOV AX,DATAS
    MOV DS,AX 
MOV BX,B
NEG BX
MOV B,BX
MOV CX,D
ADD CX,E
MOV t1,CX
MOV AX,t0
MUL  t1
MOV t2,AX
MOV DX,t2
MOV A,DX
MOV R1,a
ADD R1,3
MOV t3,R1
MOV R2,t3
MOV 2,R2
 MOV AH,4CH
    INT 21H
CODES ENDS
    END START